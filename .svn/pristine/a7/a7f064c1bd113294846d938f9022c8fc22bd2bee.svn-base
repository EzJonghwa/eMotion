<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt" %>
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>게시판 상세</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    .comment-list > div {
        margin-bottom: 1rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #ddd;
    }
    .comment-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.875rem;
        margin-bottom: 0.25rem;
    }
    .recommend-btn {
        border: 2px solid #8b8b8b;
        color: #8b8b8b;
        background-color: transparent;
        transition: all 0.3s ease;
    }
    .recommend-btn.clicked {
        border-color: #ffb909;
        color: #ffb909;
        background-color: transparent;
    }
</style>
</head>
<body class="bg-light">
    <div class="container my-5">
        <h2 class="mb-3">게시글 상세</h2>
        <div class="border p-3 bg-white mb-4">
            <div class="d-flex justify-content-between align-items-center flex-wrap mb-2">
                <div>
                    <div class="d-flex align-items-center flex-wrap">
                        <span class="text-secondary me-2">[${board.cateNm}]</span>
                        <strong class="me-2">${board.boTitle}</strong>
                        <span class="text-secondary me-2">[${commentList.size()}]</span>
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <span class="text-secondary me-3">조회수: <span id="view-count">${board.boHit}</span></span>
                    <span class="text-secondary">작성일: <fmt:formatDate value="${board.boRegDate}" pattern="yyyy-MM-dd" /></span>
                </div>
            </div>
            <div class="d-flex align-items-center mb-3">
                <img src="${board.profileImg != null ? board.profileImg : '/assets/default-profile.png'}" 
                     class="rounded-circle me-2" alt="${board.nickname}" width="30" height="30" />
                <span class="comment-author" style="color:blue;">${board.nickname}</span>
            </div>
            <hr class="my-4" />
            <div class="mt-4">
                ${board.boContent}
            </div>
            <div class="d-flex justify-content-center mt-4">
                <button id="recommend-btn" class="btn btn-outline-primary btn-lg recommend-btn">
                    추천 <span id="recommend-count" class="ms-2">${board.boRecommend}</span>
                </button>
            </div>
            <c:if test="${sessionScope.login != null && sessionScope.login.email == board.email}">
                <div class="d-flex justify-content-end">
                    <a href="/board/update?boNo=${board.boNo}" class="btn btn-secondary me-2">수정</a>
                    <a href="/board/delete?boNo=${board.boNo}" class="btn btn-danger">삭제</a>
                </div>
            </c:if>
        </div>

        <!-- 댓글 입력 -->
        <c:choose>
            <c:when test="${not empty sessionScope.login}">
                <h5 class="mb-3">${commentList.size()}개의 댓글</h5>
                <form action="/comments/add" method="post" class="comment-form">
                    <input type="hidden" name="boNo" value="${board.boNo}">
                    <div class="input-group mb-3">
                        <textarea name="coContent" class="form-control" placeholder="댓글을 입력하세요" required style="resize: none;"></textarea>
                        <button type="submit" class="btn btn-primary">작성</button>
                    </div>
                </form>
            </c:when>
            <c:otherwise>
                <div class="alert text-center" role="alert">
                    댓글 작성은 로그인 후 이용 가능합니다. <a href="/loginView" class="alert-link">로그인</a> 하시겠습니까?
                </div>
            </c:otherwise>
        </c:choose>

        <!-- 댓글 목록 -->
        <div class="bg-white border rounded p-3 comment-list">
            <c:choose>
                <c:when test="${empty commentList}">
                    <p class="text-center text-muted">첫 번째 댓글을 남겨 보세요!</p>
                </c:when>
                <c:otherwise>
                    <c:forEach var="comment" items="${commentList}">
                        <c:if test="${comment.coParentId == null}">
                            <!-- 부모 댓글 -->
                            <div class="comment-wrapper parent-comment mb-4">
                                <div class="comment-header d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <img src="${comment.profileImg != null ? comment.profileImg : '/assets/default-profile.png'}" 
                                             class="rounded-circle me-2" alt="${comment.nickname}" width="30" height="30" />
                                        <div>
                                            <span class="comment-author fw-bold text-primary">${comment.nickname}</span>
                                            <small class="text-muted d-block">${comment.coRegDate}</small>
                                        </div>
                                    </div>
                                    <div>
                                        <button class="btn btn-sm btn-outline-secondary me-1" onclick="addReply(${comment.coNo})">답글</button>
                                        <c:if test="${sessionScope.login != null && sessionScope.login.email == comment.email}">
                                            <button class="btn btn-sm btn-outline-secondary me-1" onclick="updateComment(${comment.coNo})">수정</button>
                                            <button class="btn btn-sm btn-outline-danger" onclick="deleteComment(${comment.coNo})">삭제</button>
                                        </c:if>
                                    </div>
                                </div>
                                <div class="comment-body mt-2 ps-3">
                                    <span>${comment.coDelYn == 'Y' ? '<i>삭제된 댓글입니다.</i>' : comment.coContent}</span>
                                </div>
                                <!-- 대댓글 렌더링 -->
                                <div class="recomment-wrapper mt-3 ps-5">
                                    <c:forEach var="reply" items="${commentList}">
                                        <c:if test="${reply.coParentId == comment.coNo}">
                                            <div class="comment-wrapper reply-comment mb-3">
                                                <div class="comment-header d-flex justify-content-between align-items-center">
                                                    <div class="d-flex align-items-center">
                                                        <img src="${reply.profileImg != null ? reply.profileImg : '/assets/default-profile.png'}" 
                                                             class="rounded-circle me-2" alt="${reply.nickname}" width="25" height="25" />
                                                        <div>
                                                            <span class="comment-author fw-bold text-primary">${reply.nickname}</span>
                                                            <small class="text-muted d-block">${reply.coRegDate}</small>
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <button class="btn btn-sm btn-outline-secondary me-1" onclick="addReply(${reply.coNo})">답글</button>
                                                        <c:if test="${sessionScope.login != null && sessionScope.login.email == reply.email}">
                                                            <button class="btn btn-sm btn-outline-secondary me-1" onclick="updateComment(${reply.coNo})">수정</button>
                                                            <button class="btn btn-sm btn-outline-danger" onclick="deleteComment(${reply.coNo})">삭제</button>
                                                        </c:if>
                                                    </div>
                                                </div>
                                                <div class="comment-body mt-2 ps-3">
                                                    <span>${reply.coDelYn == 'Y' ? '<i>삭제된 댓글입니다.</i>' : reply.coContent}</span>
                                                </div>
                                            </div>
                                        </c:if>
                                    </c:forEach>
                                </div>
                            </div>
                        </c:if>
                    </c:forEach>
                </c:otherwise>
            </c:choose>
        </div>
    </div>
<script>
    const isUserLoggedIn = ${sessionScope.login != null};

    function addReply(parentId) {
        const content = prompt("답글 내용을 입력하세요:");
        if (content) {
            fetch('/comments/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    boNo: ${board.boNo},
                    coContent: content,
                    coParentId: parentId
                }),
            })
            .then(response => {
                if (response.ok) {
                    location.reload();
                } else {
                    alert('답글 작성 실패');
                }
            })
            .catch(error => console.error('답글 작성 실패:', error));
        }
    }

    function updateComment(coNo) {
        const content = prompt("댓글 내용을 수정하세요:");
        if (content) {
            fetch(`/comments/update`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ coNo, coContent: content }),
            })
            .then(response => {
                if (response.ok) {
                    location.reload();
                } else {
                    alert('댓글 수정 실패');
                }
            })
            .catch(error => console.error('댓글 수정 실패:', error));
        }
    }

    function deleteComment(coNo) {
        if (confirm("댓글을 삭제하시겠습니까?")) {
            fetch(`/comments/delete?coNo=${coNo}`, { method: 'POST' })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('댓글 삭제 실패');
                    }
                })
                .catch(error => console.error('댓글 삭제 실패:', error));
        }
    }
</script>
</body>
</html>
